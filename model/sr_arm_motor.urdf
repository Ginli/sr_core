      </geometry>
      <material name="shadowarm_base_material">
	<color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.005" rpy="0 0 0" /> 
      <geometry name="shadowarm_base_collision">
        <box size="0.03 0.03 0.01"/>
