  <joint name="forearm_rotation" type="revolute">
    <parent link="shadowarm_lowerarm"/>
    <child link="shadowarm_handsupport"/>   
    <origin xyz="0.131 0 -0.08" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-1.57079632679" upper="1.57079632679"
