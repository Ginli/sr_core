<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <include filename="$(find sr_hand)/model/hand_urdf/finger/knuckle/knuckle.transmission.xacro" />

  <xacro:macro name="knuckle" params="link_prefix joint_prefix parent *origin">
  
    <link name="${link_prefix}knuckle">
      <inertial>
	<!--<origin xyz="0.011 0 0.099" rpy="0 0 0" />-->
	<insert_block name="origin" />
	<mass value="0.008" />
	<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="0.0"  iyz="0.0"
	izz="0.0" />
      </inertial>
      <visual>
	<origin xyz="0 0 0.0005" rpy="0 0 0" />
	<geometry name="knuckle_visual">
      <mesh filename="package://sr_hand/model/meshes/knuckle.mesh" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="LightGrey" />
      </visual>
      <collision>
	<origin xyz="0 0 0" rpy="0 0 0" />
	<geometry name="knuckle_collision_geom">
	  <box size="0.005 0.005 0.005" />
	</geometry>
      </collision>
    </link>
    <gazebo reference="${link_prefix}knuckle">
      <material>PR2/Grey2</material>
    </gazebo>
    
    <joint name="${joint_prefix}J4" type="revolute">
      <parent link="${parent}"/>
      <child link="${link_prefix}knuckle"/>
      <!--<origin xyz="0.033 0 0.095" rpy="0 0 0" />-->
      <insert_block name="origin" />
      <insert_block name="axis"/>
      <limit lower="-0.43633231299858238" upper="0.43633231299858238"
      effort="10" velocity="1.0"/>
      <dynamics damping="50.5"/>
    </joint>

    <xacro:knuckle_transmission />

  </xacro:macro>
  
</robot>
