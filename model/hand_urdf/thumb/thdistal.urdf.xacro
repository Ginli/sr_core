<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <include filename="$(find sr_hand)/model/hand_urdf/thumb/thdistal.transmission.xacro" />

  <xacro:macro name="thdistal" params="parent">

    <link name="thdistal">
      <inertial>
	<mass value="0.016" />
	<origin xyz="-0.02263 0 0.02263" rpy="0 0 0"/> 
	<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="0.0"  iyz="0.0"
	izz="0.0" />
      </inertial>
      <visual>
	<origin xyz="0 0 0" rpy="0 0 0" />
	<geometry name="thdistal_visual">
	<mesh filename="package://sr_hand/model/meshes/TH1_z.mesh" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="shadow_thmiddle_material">
	  <color rgba="0.2 0.2 0.2 1.0"/>
	</material>
      </visual>
      <collision>
	<origin xyz="0 0 0.025" rpy="0 0 0 " />
	<geometry name="thmiddle_collision_geom">
	  <box size="0.015 0.015 0.015" />
	</geometry>
      </collision>
    </link>
    <gazebo reference="thdistal">
      <material>Gazebo/Grey</material>
    </gazebo>

    <joint name="THJ1" type="revolute">
      <parent link="${parent}"/>
      <child link="thdistal"/>
      <origin xyz="0 0 0.032" rpy="0 0 0" />
      <axis xyz="0 -1 0" />
      <limit lower="0" upper="1.571" effort="10"
      velocity="1.0" />
      <dynamics damping="50.5"/>
    </joint>

    <xacro:thdistal_transmission />

  </xacro:macro>
  
</robot>
