<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <include filename="$(find sr_hand)/model/hand_urdf/palm/palm.transmission.xacro" />

  <xacro:macro name="palm" params="parent">
  
    <link name="palm" >
      <inertial>
	<origin xyz="0 0.010 0.247" rpy="0 0 0" />
	<mass value="0.3" />
	<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="0.0"  iyz="0.0"
	izz="0.0" /> 
      </inertial>
      <visual>
	<origin xyz="0 0 0" rpy="0 0 0" />
	<geometry name="palm_visual">
	  <mesh filename="package://sr_hand/model/meshes/palm.mesh" scale="0.001 0.001 0.001" />
	</geometry>
	<material name="Grey"/>
      </visual>
      <collision>      
	<origin xyz="0.005 0 0.035" rpy="0 0 0" />
	<geometry name="palm_collision_geom">
	  <box size="0.05 0.02 0.07" />
	</geometry>
      </collision>
    </link>
    <gazebo reference="palm">
      <material>Gazebo/Grey</material>
    </gazebo>
    
    <joint name="WRJ1" type="revolute">
      <parent link="${parent}"/>
      <child link="palm"/>
      <origin xyz="0 0 0.034" rpy="0 0 0" />
      <axis xyz="1 0 0" />
      <limit lower="-0.78539816339744828" upper="0.6108652381980153"
      effort="10" velocity="1.0"/>
      <dynamics damping="50.5"/>
    </joint>

    <xacro:shadowhand_palm_transmission />
  
  </xacro:macro>
  
</robot>
