<launch>

  <!-- start gazebo with an empty plane -->
  <include file="$(find sr_hand)/launch/gazebo/empty_world.launch"/>

  <!-- spawn the arm model -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find sr_hand)/model/robots/xacro/shadowhand_motor.urdf.xacro'" />
  <node name="spawn_hand" pkg="gazebo" type="spawn_model" args="-urdf -param robot_description -z 0.01 -model shadow_model" respawn="false" output="screen" />

  <!-- Controllers for the arm -->
  <rosparam file="$(find sr_hand)/model/hand_urdf/hand_controller.yaml" command="load"/>
  <node name="spawn_gazebo_controllers"
	pkg="pr2_controller_manager" type="spawner" respawn="false" output="screen"
	args="wrist_controller palm_controller ffknuckle_controller ffproximal_controller ffmiddle_controller mfknuckle_controller mfproximal_controller mfmiddle_controller rfknuckle_controller rfproximal_controller rfmiddle_controller lfmetacarpal_controller lfknuckle_controller lfproximal_controller lfmiddle_controller spawn_thbase_controller thbase_controller thproximal_controller thhub_controller thmiddle_controller thdistal_controller" />

</launch>
