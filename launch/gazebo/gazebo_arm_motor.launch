<launch>

  <!-- start gazebo with an empty plane -->
  <include file="$(find sr_hand)/launch/gazebo/empty_world.launch"/>

  <!-- spawn the arm model -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find sr_hand)/model/robots/xacro/sr_arm_motor.urdf.xacro'" />
  <node name="spawn_arm" pkg="gazebo_tools" type="gazebo_model" args="-p robot_description spawn" respawn="false" output="screen" />

  <!-- Controllers for the arm -->
  <rosparam file="$(find sr_hand)/model/arm_urdf/arm_controller.yaml" command="load"/>
  <node name="spawn_trunk_controller" pkg="pr2_controller_manager" type="spawner" args="trunk_rotation_controller" respawn="false" output="screen" />
  <node name="spawn_shoulder_controller" pkg="pr2_controller_manager" type="spawner" args="shoulder_rotation_controller" respawn="false" output="screen" />
  <node name="spawn_elbow_controller" pkg="pr2_controller_manager" type="spawner" args="elbow_abduction_controller" respawn="false" output="screen" />
  <node name="spawn_forearm_controller" pkg="pr2_controller_manager" type="spawner" args="forearm_rotation_controller" respawn="false" output="screen" />

</launch>
